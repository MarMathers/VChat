    {{!-- <div class="container"> --}}

    <video id="localVideo" autoplay muted></video>


    <video id="remoteVideo" hidden autoplay>


    </video>




    <div class="prokrutka hide-on-small-and-down">
        <ul id="contacts" class="collection" />
    </div>

    {{!-- <ul class="sidenav" id="contacts-menu">
