            <a class="btn-floating btn-large ">
                <i class="large material-icons">settings</i>
            </a>
            <ul>
                <li><a id="micButton" class="btn-floating darkblue"><i class="material-icons">mic</i></a></li>
                <li><a id="camButton" class="btn-floating darkblue"><i class="material-icons">videocam</i></a></li>
                <li><a id="outButton" class="btn-floating   red"><i class="material-icons">call_end</i></a></li>
            </ul>
        </div>

    </div>
    <div>
        <span id="status" class="status right-align ">Ожидаем подключения..</span>
    </div>



</footer>



